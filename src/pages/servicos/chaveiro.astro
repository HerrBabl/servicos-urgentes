---
import Layout from '../../layouts/Layout.astro';
import BusinessListing from '../../components/BusinessListing.astro';
import { chaveiros } from '../../data/chaveiros.js';
---

<Layout 
  title="Chaveiro 24h SJC: Profissionais Verificados (4+ Estrelas) 2026"
  description="Trancado para fora? Encontre chaveiros 24h em São José dos Campos com chegada em até 30 min. Atendimento garantido no Centro, Aquarius e Vila Adyana."
>
  <!-- Service Schema for Locksmith -->
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "serviceType": "Locksmith",
    "name": "Serviços de Chaveiro 24h",
    "description": "Serviços de chaveiro de emergência disponíveis 24 horas em São José dos Campos. Abertura de portas, fechaduras, cópias de chaves e chaveiro automotivo.",
    "provider": {
      "@type": "Organization",
      "name": "Serviços Urgentes",
      "url": "https://servicosurgentes.com"
    },
    "areaServed": {
      "@type": "City",
      "name": "São José dos Campos",
      "containedIn": {
        "@type": "State",
        "name": "São Paulo"
      }
    },
    "availableChannel": {
      "@type": "ServiceChannel",
      "serviceUrl": "https://servicosurgentes.com/servicos/chaveiro",
      "availableLanguage": "pt-BR"
    },
    "hoursAvailable": {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": [
        "Monday",
        "Tuesday", 
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ],
      "opens": "00:00",
      "closes": "23:59"
    },
    "category": "Emergency Locksmith Services",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Serviços de Chaveiro",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Abertura de Portas de Emergência"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Troca e Instalação de Fechaduras"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Cópias de Chaves"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Chaveiro Automotivo 24h"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Abertura de Cofres"
          }
        }
      ]
    }
  }
  </script>

  <BusinessListing 
    businesses={chaveiros}
    serviceTitle="Chaveiros"
  />
</Layout>