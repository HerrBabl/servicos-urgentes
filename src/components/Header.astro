    </div>

    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-100">
        <a href="/" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-red-600">In√≠cio</a>
        
        <!-- Mobile Services Submenu -->
        <div>
          <button class="w-full text-left px-3 py-2 text-base font-medium text-gray-700 hover:text-red-600 flex items-center justify-between" id="mobile-services-button">
            Servi√ßos
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="hidden pl-4" id="mobile-services-menu">
            <a href="/servicos/encanador" class="block px-3 py-2 text-sm text-gray-600 hover:text-red-600">üîß Encanadores</a>
            <a href="/servicos/eletricista" class="block px-3 py-2 text-sm text-gray-600 hover:text-red-600">‚ö° Eletricistas</a>
