---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  canonicalURL?: string;
  keywords?: string; // ✅ Added support for keywords
}

const { 
  title, 
  description = "Encontre serviços de emergência 24h em São José dos Campos e região. Encanadores, chaveiros, eletricistas e técnicos em ar condicionado disponíveis agora.",
  keywords // ✅ Destructure keywords
} = Astro.props;

// Get the canonical URL - either passed as prop or construct from current URL
const canonicalURL = Astro.props.canonicalURL || new URL(Astro.url.pathname, Astro.site).href;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    {keywords && <meta name="keywords" content={keywords} />}
    
    <meta name="google-site-verification" content="3EVCfZVg-CMam0QTwjS2p7ZAzenMF5wmUHDQulclbHg" />
    <link rel="canonical" href={canonicalURL} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <meta name="generator" content={Astro.generator} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Serviços Urgentes SJC",
      "url": "https://servicosurgentes.com",
      "logo": "https://servicosurgentes.com/favicon.svg",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+55-12-99999-9999",
        "contactType": "customer service",
        "areaServed": "São José dos Campos"
      }
    }
    </script>
    
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "item": {
            "@type": "Service",
            "name": "Encanador 24h",
            "url": "https://servicosurgentes.com/servicos/encanador",
            "serviceType": "Plumbing",
            "areaServed": "São José dos Campos, SP"
          }
        },
        {
          "@type": "ListItem",
          "position": 2,
          "item": {
            "@type": "Service",
            "name": "Chaveiro 24h",
            "url": "https://servicosurgentes.com/servicos/chaveiro",
            "serviceType": "Locksmith",
            "areaServed": "São José dos Campos, SP"
          }
        },
        {
          "@type": "ListItem",
          "position": 3,
          "item": {
            "@type": "Service",
            "name": "Eletricista de Emergência 24h",
            "url": "https://servicosurgentes.com/servicos/eletricista",
            "serviceType": "Electrician",
            "areaServed": "São José dos Campos, SP"
          }
        },
        {
          "@type": "ListItem",
          "position": 4,
          "item": {
            "@type": "Service",
            "name": "Técnico em Ar Condicionado 24h",
            "url": "https://servicosurgentes.com/servicos/ar-condicionado",
            "serviceType": "HVAC",
            "areaServed": "São José dos Campos, SP"
          }
        }
      ]
    }
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    
    <style>
      html {
        font-family: 'Inter', system-ui, sans-serif;
        scroll-behavior: smooth;
      }
      body {
        background-color: #f9fafb;
        color: #1f2937;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1;
      }
    </style>
  </body>
</html>